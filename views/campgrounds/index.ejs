
<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/index.css">    
    <div id="map"></div>
    <div class="container">
        <h1 class="campsTitle">View All Camps</h1>
        <br>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% for(let campground of campgrounds){%>
            <div class="col">
                <div class="card shadow-sm bg-dark text-white">
                    <% if(campground.images.length) { %>
                        <img class="card-img-top" alt="" src="<%= campground.images[0].url %>" style="height: 279px;">
                    <% }else {%>
                        <img  class="card-img-top" src="https://res.cloudinary.com/m-camp/image/upload/v1632387230/dzmznb6xquuv1quxh1sf.jpg" alt="">
                    <% }%>
                    <div class="card-body">
                        <a class="btn btn-md btn-outline-secondary" href="/campgrounds/<%= campground._id %>">View</a>
                        <p class="card-text"><%= campground.title %></p>
                        <p class="card-text"><%= campground.location %></p>
                        <div class="d-flex justify-content-between align-items-center">                            
                            <small class="text-muted"><%= campground.description %></small>
                        </div>
                    </div>
                </div>
            </div>
            <% }%>
        </div>
    </div>
    <br>
<script>
    const mapboxToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}
</script>

<script src="/javascripts/clusterMap.js"></script>